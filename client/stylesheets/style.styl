@import "font-awesome"
@import "nib"
global-reset()

$milk = #EED
$color0 = #3C79B4
$color1 = #DFB427
$color2 = #446687
$color3 = #FF8347

#iam
    display none
    position fixed
    top 0
    left 0
    z-index 9999
    background rgba(0, 0, 0, 0.8)

    form
        width 400px
        margin 200px auto
    input
        font-size 200%

.color-0
    background $color1
    &:hover
        background $color1

.color-1
    background $color2
    &:hover
        background $color2
.color-2
    background $color3
    &:hover
        background $color3
.color-3
    background $color0
    &:hover
        background $color0

html
    height 100%

body  
    color #333
    height 100%
    font-family Helvetica, "LiHei Pro", "微軟正黑體", Arial, sans-serif

    padding-top 60px

nav
    width 80%
    height 40px
    background #333

    color white
    position fixed
    top 0


    li
        float left

        cursor pointer

        &:hover
            background #444

    a
        display block
        height 40px
        line-height 40px
        text-align center
        height 40px
        color inherit
        text-decoration none


    li:nth-of-type(4n)
        border-bottom 6px solid $color0
    li:nth-of-type(4n+1)
        border-bottom 6px solid $color1
    li:nth-of-type(4n+2)
        border-bottom 6px solid $color2
    li:nth-of-type(4n+3)
        border-bottom 6px solid $color3


article
    float left
    width 80%

section
    width 800px
    margin 0 auto
    font-size 150%
    padding 3em 0


    ol
        list-style disc
        padding-left 1em

        li
            padding 10px 0


h1
h2
h3
    font-weight bold
    color #555

h2
    font-size 200%
    height 4ex
    line-height 3ex

h3
    font-size 150%
    height 4ex
    line-height 5ex

p
    margin 1em 0
    line-height 1.5em


//
//  chatroom
//

#chatroom
    width 20%
    height 100%
    position fixed
    background #333
    padding 5px
    right 0 
    top 0

    #log
        background white
        overflow auto

        li
            padding 0 5px
            height 40px
            line-height 40px

            span
                color #777

    #form
        height 30px
        padding 5px 0
    #textbox
        height 30px
        line-height 30px
